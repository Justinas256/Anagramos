@model PagedList.IPagedList<String>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Anagrams";
}
<h2>Words</h2>

<form action="FindWord">
    <div class="form-group">
        <label>Filter:</label>
        <input class="form-control" id="word" name="word">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
<br/>

@foreach (String item in Model)
{
    <li>@Html.ActionLink(@item, "Anagram", "Home", new { word = @item }, null)</li>
}

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Show", new { page }))
